<resources>

    <style name="Theme_NewSubject"
           parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryDark">@color/primary_color_dark</item>
        <item name="colorAccent">@android:color/white</item>
    </style>

    <style name="Theme_NewSubject_Old"
           parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryDark">@color/primary_color_dark</item>
        <item name="colorAccent">@android:color/white</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="Theme_Main"
           parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryDark">@color/primary_color_dark</item>
    </style>

    <style name="Theme_SubjectView"
           parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryDark">@color/primary_color_dark</item>
    </style>

    <style name="LightFlatButtonRippleStyle" parent="Material.Drawable.Ripple.Touch.Light">
        <item name="android:background">@null</item>
        <item name="rd_cornerRadius">4dp</item>
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Button</item>
        <item name="android:textColor">@color/abc_primary_text_material_light</item>
    </style>

    <style name="LightFABColor" parent="Material.Drawable.Ripple.Touch.Light">
        <item name="rd_rippleColor">#33000000</item>
        <item name="fab_backgroundColor">@color/primary_color</item>
        <item name="fab_elevation">2dp</item>
        <item name="fab_iconLineMorphing">@style/LightFloatingActionButtonIcon</item>
        <item name="rd_delayClick">untilRelease</item>
    </style>

    <style name="LightFloatingActionButtonIcon">
        <item name="lmd_state">@xml/fab_icon_states</item>
        <item name="lmd_curState">0</item>
        <item name="lmd_padding">2dp</item>
        <item name="lmd_animDuration">400</item>
        <item name="lmd_interpolator">@android:anim/accelerate_decelerate_interpolator</item>
        <item name="lmd_strokeSize">3dp</item>
        <item name="lmd_strokeColor">@android:color/white</item>
        <item name="lmd_strokeCap">butt</item>
        <item name="lmd_strokeJoin">miter</item>
        <item name="lmd_clockwise">true</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="CardExpandButton" parent="card.native.header_button_base.expand">
        <!--<item name="android:background">@drawable/ripple</item>-->
        <item name="android:padding">2dp</item>
    </style>

    <style name="ProjectCardContent" parent="card.native.content_outer_layout">
        <item name="android:layout_margin">0dp</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="ProjectCardMainForeground" parent="card.native.main_layout_foreground">
        <item name="android:padding">0dp</item>
        <item name="android:background">@null</item>
        <item name="android:foreground">@null</item>
    </style>

    <style name="SnackBarUndoRemove" parent="Material.Widget.SnackBar.Mobile">
        <item name="sb_text">Undo the removal?</item>
        <item name="sb_actionText">YES</item>
        <item name="sb_duration">5000</item>
        <item name="sb_actionTextColor">#FFFFFFFF</item>
        <item name="sb_marginBottom">21dp</item>
        <item name="sb_inAnimation">@android:anim/slide_in_left</item>
        <item name="sb_outAnimation">@anim/slide_out</item>
    </style>

</resources>
